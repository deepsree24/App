<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48d1cc"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="#000"
        android:fontFamily="@font/bubblegum_sans"
        android:text="WELCOME "
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="106dp"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/icon1" />

    <Button
        android:id="@+id/btnBMI"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/btn_bg"
        android:text="Click here to calculate BMI" />

    <Button
        android:id="@+id/btnDiet"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/btn_bg"
        android:text="Click here to view fitness tips" />

    <Button
        android:id="@+id/btnClk"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/btn_bg"
        android:text="Click here to set remainder" />

    <Button
        android:id="@+id/btnExer"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/btn_bg"
        android:text="Click here to see the exercises" />


    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/btnstop"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="490dp"
        android:background="@drawable/btn_bg"
        android:text="STOPWATCH" />

    <Button
        android:id="@+id/btnstep"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/btn_bg"
        android:text="PEDOMETER" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:text="Logout" />


   </RelativeLayout>

